= render 'shared/validation_errors', obj: @restaurant
%h2.text-center Add Restaurant

.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
  = form_for @restaurant, html: { class: 'center-block' } do |f|
    .form-group
      = f.label :name
      = f.text_field :name, class: 'form-control'
    .form-group
      = f.label :capacity
      = f.text_field :capacity, class: 'form-control'
    .form-group
      = f.label :capacity, 'Business hours', class: 'clearfix'
      .business-hours
        .opening-time
          %span.clearfix From
          = f.time_select :opens_at, { prompt: { hour: 'Hours', minute: 'Minutes' }, minute_step: 1, time_separator: '' }, { class: 'form-control' }
        .closing-time
          %span.clearfix Till
          = f.time_select :closes_at, { prompt: { hour: 'Hours', minute: 'Minutes' }, minute_step: 1, time_separator: '' }, { class: 'form-control' }
    .text-center
      = link_to 'Cancel', :back, class: 'btn btn-default'
      = f.submit 'Add', class: 'btn btn-primary'